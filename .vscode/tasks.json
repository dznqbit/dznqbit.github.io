{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "jekyll",
          "type": "shell",
          "command": "bundle exec jekyll serve --trace --incremental --livereload",
          "isBackground": true,
          "problemMatcher":
          {
            "pattern": [
              {
                "regexp": ".",
                "file": 1,
                "location": 2,
                "message": 3
              }
            ],
            "background": {
              "activeOnStart": true,
              "beginsPattern": ".",
              "endsPattern": ".",
            }
          }
      }
  ]
}